{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext", 
      "moduleResolution": "NodeNext",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true, 
      "allowJs": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  